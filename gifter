    </footer>

    <script>
        const searchBar = document.getElementById('searchBar');
        const occasionFilter = document.getElementById('occasionFilter');
        const budgetFilter = document.getElementById('budgetFilter');
        const gifts = document.querySelectorAll('li');

        function filterGifts() {
            const searchText = searchBar.value.toLowerCase();
            const occasion = occasionFilter.value;
            const budget = budgetFilter.value;

            gifts.forEach(gift => {
                const text = gift.textContent.toLowerCase();
                const giftOccasion = gift.getAttribute('data-occasion');
                const giftBudget = gift.getAttribute('data-budget');

                const matchesSearch = text.includes(searchText);
                const matchesOccasion = (occasion === 'all' || giftOccasion === occasion);
                const matchesBudget = (budget === 'all' || giftBudget === budget);

                if (matchesSearch && matchesOccasion && matchesBudget) {
                    gift.style.display = 'block';
                } else {
                    gift.style.display = 'none';
                }
            });
        }

        searchBar.addEventListener('input', filterGifts);
        occasionFilter.addEventListener('change', filterGifts);
        budgetFilter.addEventListener('change', filterGifts);
    </script>
