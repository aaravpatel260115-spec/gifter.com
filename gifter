    <!-- Filters -->
    <div class="filters">
        <input type="text" id="searchBar" placeholder="Search gifts...">
        <select id="occasionFilter">
            <option value="all">All Occasions</option>
            <option value="birthday">Birthday</option>
            <option value="anniversary">Anniversary</option>
            <option value="holiday">Holiday</option>
        </select>
        <select id="budgetFilter">
            <option value="all">All Budgets</option>
            <option value="low">Under $20</option>
            <option value="mid">$20 - $100</option>
            <option value="high">Above $100</option>
        </select>
    </div>

    <!-- Gift Sections -->
    <section>
        <h2>üéÇ Birthday Gifts</h2>
        <ul>
            <li data-occasion="birthday" data-budget="low">Handmade photo album</li>
            <li data-occasion="birthday" data-budget="mid">Customized coffee mug</li>
            <li data-occasion="birthday" data-budget="high">Wireless earbuds</li>
        </ul>
